@model TransUnionPortal.Models.ConfigurationFile
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@{
        ViewBag.Title = "Index";
    }</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <h2>Exportar Archivo</h2>

        <div class="row">
            @using (Html.BeginForm("Index", "ExportFile", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>Seleccione el tipo de archivo</legend>
                    <div class="form-group">
                        @Html.LabelFor(x => x.SelectecType, new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.SelectecType, Model.Type, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Preview</button>
                        </div>
                    </div>
                </fieldset>
            }

        </div>
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>
